# Timeline Filter Configuration Example
# Copy this file to .env and fill in your values

# HTTP Server
HTTP_PORT=4050
EXTERNAL_BASE=https://your-feed-generator.com

# Database
DATABASE_URL=sqlite://timeline-filter.db

# Timeline Filter Settings (NEW)
# Path to timeline feeds YAML configuration file
TIMELINE_FEEDS=timeline_feeds.yml

# Enable/disable timeline consumer (default: true)
TIMELINE_CONSUMER_ENABLE=true

# Global poll interval for all users (can be overridden per-user)
# Format: "10s", "30s", "1m", "5m", etc.
POLL_INTERVAL=30s

# Jetstream Consumer Settings (OPTIONAL - for backward compatibility)
# Only needed if you also want to run Jetstream-based feeds
CONSUMER_TASK_ENABLE=false
JETSTREAM_HOSTNAME=jetstream2.us-east.bsky.network
COMPRESSION=false
# ZSTD_DICTIONARY=data/zstd_dictionary  # Only if COMPRESSION=true
# FEEDS=feeds.yml  # Only if CONSUMER_TASK_ENABLE=true
COLLECTIONS=app.bsky.feed.post

# Cache Settings
CACHE_TASK_ENABLE=true
CACHE_TASK_INTERVAL=3m
# FEED_CACHE_DIR=cache  # Optional: directory for feed cache files

# Cleanup Settings
CLEANUP_TASK_ENABLE=true
CLEANUP_TASK_INTERVAL=1h
CLEANUP_TASK_MAX_AGE=48h

# Verification Method Cache (VMC)
VMC_TASK_ENABLE=true
PLC_HOSTNAME=plc.directory

# Logging
# RUST_LOG=timeline_filter=debug,info
RUST_LOG=info

# Optional: Custom User Agent
# USER_AGENT=timeline-filter (version; +https://github.com/YOUR-USERNAME/timeline-filter)

# Optional: Custom CA Certificate Bundles (semicolon-separated)
# CERTIFICATE_BUNDLES=/path/to/cert1.pem;/path/to/cert2.pem
